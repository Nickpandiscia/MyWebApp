@model Products 

<form method="post" asp-action="Edit">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit Products</h2>
			<hr />
		</div>
		@*<div asp-validation-summary="All"></div>*@
		<div class="mb-3">
			<label asp-for="Name"></label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="type"></label>
			<input asp-for="type" class="form-control" />
			<span asp-validation-for="type" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="price"></label>
			<input asp-for="price" class="form-control" />
			<span asp-validation-for="price" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="review"></label>
			<input asp-for="review" class="form-control" />
			<span asp-validation-for="review" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Update</button>
		<a asp-controller="Products" asp-action="Index" class="btn btn-secondary" style="width:150px">
			Back To List
		</a>
	</div>
</form>
@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
